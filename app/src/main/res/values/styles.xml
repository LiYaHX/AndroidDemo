<resources>

    <!-- Base application theme.

     <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
     -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NBTranslucentDecorActivityStyle" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.TranslucentDecor">
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- fitSystemWindows default value is false. when is set to true, the windowSoftwareInput is right to show, but false is not -->
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="BtnStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/bb_inActiveBottomBarItemColor</item>
        <item name="colorButtonNormal">@android:color/holo_blue_dark</item>
    </style>

    <style name="RidioBtnChecked" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RidioBtnUnChecked" parent="@style/Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textStyle">normal</item>
    </style>
</resources>
